<UserControl x:Class="VetManagement.Components.Menus.TreatmentsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetManagement.Components.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border  Grid.Row="0" Style="{StaticResource ButtonMenuSection}">
            <DockPanel Grid.Row="0">

                <Button Grid.Row="0" VerticalAlignment="Center" Content="➕ Adaugă în registru" HorizontalAlignment="Left"
                  Style="{StaticResource BasicButton}" Background="#FF4CAF50" Command="{Binding  NavigateCreateTreatmentWindowCommand}"/>

                <Button HorizontalAlignment="Center" Background="Gray" Style="{StaticResource BasicButton}" Command="{Binding FilterHelper.ToggleVisibilityCommand}" Margin="10,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Filtre"/>
                            <TextBlock Text="{Binding FilterHelper.FilterToggleSymbol}" HorizontalAlignment="Center" Margin="3,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button  Style="{StaticResource BasicButton}" Content="Detallii" Command="{Binding NavigateTreatmentViewCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>
        
        <Border Style="{StaticResource FilterMenuSection}" Grid.Row="1"
            Visibility="{Binding FilterHelper.AreFiltersVisible, Converter={StaticResource BoolToVisibilityConverter}}" >
            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                <StackPanel Width="150" HorizontalAlignment="Left" Margin="0,0,20,0">
                    <TextBlock Text="Proprietar" FontSize="13"/>
                    <TextBox Text="{Binding OwnerNameFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="13"/>
                </StackPanel>

                <StackPanel Width="150" HorizontalAlignment="Left" Margin="0,0,20,0">
                    <TextBlock Text="Animal" FontSize="13"/>
                    <TextBox Text="{Binding PatientSpeciesFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="13"/>
                </StackPanel>

                <StackPanel Width="150" HorizontalAlignment="Left" Margin="0,0,20,0">
                    <TextBlock Text="Medicament folosit" FontSize="13"/>
                    <TextBox Text="{Binding MedNameFilter, UpdateSourceTrigger=PropertyChanged}"  FontSize="13"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
