<UserControl x:Class="VetManagement.Components.CreateMedForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetManagement.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="InputLabel">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="TextBox" x:Key="Input">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </UserControl.Resources>
        <Border  Background="White" CornerRadius="10" Padding="10" 
             BorderBrush="#DDD" BorderThickness="1" >
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="10,0">
                        <TextBlock Text="Nume:" Width="100" Style="{StaticResource InputLabel}"/>
                        <TextBox Style="{StaticResource Input}" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="10,0">
                        <TextBlock Text="Serie Lot:" Width="100" Style="{StaticResource InputLabel}"/>
                        <TextBox Style="{StaticResource Input}" Text="{Binding LotID, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="10,0">
                        <TextBlock Text="Valabilitate:" Width="100" Style="{StaticResource InputLabel}"/>
                        <TextBox Style="{StaticResource Input}" Text="{Binding Valability, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="10,0">
                        <TextBlock Text="Tip Cantitate:" Width="100" Style="{StaticResource InputLabel}"/>
                        <TextBox Style="{StaticResource Input}" Text="{Binding QuantityType, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="10,0">
                            <TextBlock Text="Cantitate:" Width="100" Style="{StaticResource InputLabel}"/>
                            <TextBox Style="{StaticResource Input}"  Text="{Binding Quantity, FallbackValue='1',  UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="10">
                        <TextBlock Text="Descriere:" Style="{StaticResource InputLabel}"/>
                    <TextBox  Style="{StaticResource Input}" HorizontalAlignment="Left" Height="50" Width="500" TextWrapping="Wrap"
                                  Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="left" Margin="10,10,0,0">
                <Button Content="💾 Save" Padding="10,5" Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                    Command="{Binding CreateMedCommand}" />
            </StackPanel>   
        </StackPanel>
        </Border>
</UserControl>
