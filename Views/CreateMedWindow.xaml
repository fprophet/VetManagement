<Window x:Class="VetManagement.Views.CreateMedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetManagement.Views"
        mc:Ignorable="d"
        Title="Formular Creare Medicament" Height="650" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="InputLabel">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="TextBox" x:Key="Input">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <Border  Background="White" CornerRadius="10" Padding="10" 
         BorderBrush="#DDD" BorderThickness="2" Width="Auto">
        <StackPanel>
            <TextBlock Text="Formular" Margin="10,5" FontSize="30"/>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="Nume:" Width="100" Style="{StaticResource InputLabel}"/>
                    <TextBox HorizontalAlignment="Left" Style="{StaticResource Input}" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="Serie Lot:" Width="100" Style="{StaticResource InputLabel}"/>
                    <TextBox HorizontalAlignment="Left" Style="{StaticResource Input}" Text="{Binding LotID, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="Valabilitate:" Width="100" Style="{StaticResource InputLabel}"/>
                    <DatePicker HorizontalAlignment="Left" SelectedDate="{Binding Valability,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="Tip Cantitate:" Width="100" Style="{StaticResource InputLabel}"/>
                    <TextBox HorizontalAlignment="Left" Style="{StaticResource Input}" Text="{Binding QuantityType, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock Text="Cantitate:" Width="100" Style="{StaticResource InputLabel}"/>
                    <TextBox HorizontalAlignment="Left" Style="{StaticResource Input}"  Text="{Binding Quantity, FallbackValue='1',  UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Descriere:" Style="{StaticResource InputLabel}"/>
                <TextBox  Style="{StaticResource Input}" HorizontalAlignment="Left" Height="100" Width="500" TextWrapping="Wrap"
                              Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="left" Margin="10,10,0,0">
                <Button Content="💾 Save" Padding="10,5" Background="#4CAF50" Foreground="White"
                FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                Command="{Binding CreateMedCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
