<UserControl x:Class="VetManagement.Views.CreateTreatmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:VetManagement.ViewModels" 
             xmlns:services="clr-namespace:VetManagement.Services" d:DataContext="{d:DesignInstance Type=vm:CreateTreatmentViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400">


    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <services:CommandParameterToIntConverter x:Key="CommandParameterToIntConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20" Width="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Selectați un animal" FontWeight="Bold" Margin="0,5" />
            <ComboBox ItemsSource="{Binding Patients}" 
                      SelectedItem="{Binding Patient, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Name" Width="200" HorizontalAlignment="Left"/>
        </StackPanel>
        <!-- Medications Section -->
        <StackPanel Grid.Row="7" Margin="0,0,0,0">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding MedInputPair}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <StackPanel HorizontalAlignment="Left" Margin="0,0,10,0">
                                    <TextBlock Text="Medicament"/>
                                    <ComboBox Width="150" ItemsSource="{Binding DataContext.Meds, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        DisplayMemberPath="Name"  
                                        SelectedValue="{Binding Med,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Left" Margin="0,0,10,0">
                                    <TextBlock Text="Cantitate"/>
                                    <TextBox Width="100" Height="20"
                                        Text="{Binding Quantity , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                                <TextBlock VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}În stoc: {0}">
                                            <Binding Path="StockQuantity" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <Button Content="❌" Width="25" Height="25" VerticalAlignment="Bottom" 
                                        CommandParameter="{Binding Rank,Mode=TwoWay, Converter={StaticResource CommandParameterToIntConverter}}"
                                        Command="{Binding DataContext.RemoveInputPairCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Adaugă Medicament ➕"  Command="{Binding AddInputPairCommand}" Margin="0,10" Padding="5" HorizontalAlignment="Left" Width="140"/>
            </StackPanel>

            <!--<StackPanel Orientation="Horizontal" Name="MedsPanel" >

                <StackPanel  Orientation="Vertical" Margin="0,0,0,0">
                    <TextBlock Text="Medicament" FontWeight="Bold" Margin="0,5"/>
                    <ComboBox x:Name="MedId" Width="150"  SelectedItem="{Binding SelectedMed, UpdateSourceTrigger=PropertyChanged}" 
                    ItemsSource="{Binding Meds}" DisplayMemberPath="Name"  />
                </StackPanel>

                <StackPanel Orientation="Vertical" Width="100" Margin="10,0,0,0">
                    <TextBlock Text="Cantitate" FontWeight="Bold" Margin="0,5"/>
                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="80" Height="25"/>
                </StackPanel>

                --><!--<ItemsControl ItemsSource="{Binding MedInputsCollection}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                                <TextBox Text="{Binding Path=.}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>-->

                    <!--<Button HorizontalAlignment="Left" VerticalAlignment="Center" 
                        Content="Adăugați medicament" Width="100" Height="30" Command="{Binding AddMedInputCommand}"/>--><!--

            </StackPanel>-->
            <StackPanel Orientation="Vertical" Margin="0,10">
                <TextBlock Text="Detalii" FontWeight="Bold" Margin="0,5"/>
                <TextBox Text="{Binding Details, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Height="100"/>
            </StackPanel>
            <Button Content="Adaugați tratament" Background="#4A90E2" Foreground="White" FontWeight="Bold"
                    Height="30" Width="250" HorizontalAlignment="Left"  Command="{Binding CreateTreatmentCommand}" />
        </StackPanel>
 
    </Grid>
</UserControl>