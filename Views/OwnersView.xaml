    <UserControl x:Class="VetManagement.Views.OwnersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetManagement.Views" xmlns:services="clr-namespace:VetManagement.Services"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

 
    
        <UserControl.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <services:CommandParameterToIntConverter x:Key="CommandParameterToIntConverter"/>
        </UserControl.Resources>

        <Grid>
            <!-- Owner List -->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20,0">
                <Button Content="Crează proprietar nou" HorizontalAlignment="Left"
                    Style="{StaticResource CreateOwnerButtonStyle}" Command="{Binding NavigateCreateOwnerCommand}"  />
            
                <TextBlock Text="Filtre" FontSize="20" Margin="0,20,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                
                    <StackPanel Width="200" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <TextBlock Text="Nume" FontSize="15"/>
                        <TextBox Text="" FontSize="15"/>
                    </StackPanel>

                    <StackPanel Width="200" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <TextBlock Text="Animal" FontSize="15"/>
                        <TextBox Text="" FontSize="15"/>
                    </StackPanel>

                <StackPanel Width="200" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <TextBlock Text="Detalii" FontSize="15"/>
                        <TextBox Text="" FontSize="15"/>
                    </StackPanel>

                <Button Content="Aplica " HorizontalAlignment="Left" 
                        Style="{StaticResource CreateOwnerButtonStyle}" Command="{Binding NavigateCreateOwnerCommand}"  />
            </StackPanel>
            </StackPanel>
           
            <DataGrid Name="OwnerList" ItemsSource="{Binding Owners}" Style="{StaticResource StylishDataGrid}" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data Înscriere" Binding="{Binding DateAddedFormated}" Width="150"/>
                    <DataGridTextColumn Header="Nume" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Adresă" Binding="{Binding Address}" Width="200"/>
                    <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="100"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="250"/>

                    <DataGridTemplateColumn Header="Animale"  Width="300">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox ItemsSource="{Binding Patients}"
                                            SelectedItem="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                            DisplayMemberPath="Name"
                                            Width="200"/>
                                    <Button Content="➕" Background="Green"
                                            Command="{Binding DataContext.NavigateCreatePatientCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding Id, Converter={StaticResource CommandParameterToIntConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Detalii" Binding="{Binding Details}" Width="300"/>

                    <DataGridTemplateColumn Header="Acțiuni" Width="250">
                        <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Delete" Background="Red"  Padding="10,5" Foreground="White"
                                                Command="{Binding DataContext.DeleteOwnerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding Id, Converter={StaticResource CommandParameterToIntConverter}}" 
                                                />
                                        <Button Content="Listă tratamente" Background="Green" Margin="10,0" Padding="10,5" Foreground="White"
                                            Command="{Binding DataContext.NavigateCreateTreatmentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding Id, Converter={StaticResource CommandParameterToIntConverter}}" 
                                            />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Create Owner Button -->
        
        </Grid>
</UserControl>
