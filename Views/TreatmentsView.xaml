<UserControl x:Class="VetManagement.Views.TreatmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetManagement.Views" xmlns:services="clr-namespace:VetManagement.Services"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <services:CommandParameterToIntConverter x:Key="CommandParameterToIntConverter"/>
    </UserControl.Resources>

    <Grid Margin="10,10,0,-143">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Treatments}"  Style="{StaticResource StylishDataGrid}">
            
            <DataGrid.Columns>

                <DataGridTextColumn ElementStyle="{StaticResource CenterTextBlock}" Header="Data" Binding="{Binding DateAddedFormated, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="150"/>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextBlock}" Header="Nume Animal"  Binding="{Binding Patient.Name}" Width="130" />
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextBlock}" Header="Specie"  Binding="{Binding Patient.Species}" Width="100"/>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextBlock}" Header="Rasa" Binding="{Binding Patient.Race}" Width="100"/>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextBlock}" Header="Sex" Binding="{Binding Patient.Sex}" Width="70"/>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextBlock}" Header="Vârsta"  Binding="{Binding Patient.Age}" Width="70"/>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextBlock}" Header="Greutate"  Binding="{Binding Patient.Weight}" Width="100"/>

                <DataGridTemplateColumn Header="Medicamente" Width="403" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DataGrid  ItemsSource="{Binding TreatmentMeds}" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nume" Binding="{Binding Med.Name}" Width="100"/>
                                    <DataGridTextColumn Header="Cantitate" Binding="{Binding Quantity}" Width="100"/>
                                    <DataGridTextColumn Header="Tip Dozaj" Binding="{Binding Med.QuantityType}" Width="100"/>
                                    <DataGridTextColumn Header="Serie Lot" Binding="{Binding Med.LotID}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn ElementStyle="{StaticResource WrapTextBlock}" Header="Detalii" Binding="{Binding Details}"   Width="250"/>

