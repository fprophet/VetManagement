<Window x:Class="VetManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetManagement.ViewModels" 
        xmlns:viewmodels="clr-namespace:VetManagement.ViewModels" 
        xmlns:components="clr-namespace:VetManagement.Components"
        d:DataContext="{d:DesignInstance Type=viewmodels:UserLoginViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:UserLoginViewModel/>
    </Window.DataContext>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Login" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBlock Text="Username:"/>
            <TextBox Width="250" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Password:"/>

            <components:BindablePasswordBox x:Name="Password" Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Login" Width="100" Margin="5" Command="{Binding LoginCommand}"/>
            <Button Content="Cancel" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
